
<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <p><i class="fa-solid fa-square-check"></i> <%= link_to task.title, task_path(task.id) %> <%= link_to "Delete",
  task_path(task.id),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
  <% else %>
    <p> <i class="fa-solid fa-square"></i> <%= link_to task.title, task_path(task.id) %> <%= link_to "Delete",
  task_path(task.id),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
  <% end %>
<% end %>

<h2><%= link_to "Add a new task", new_task_path %></h2>
